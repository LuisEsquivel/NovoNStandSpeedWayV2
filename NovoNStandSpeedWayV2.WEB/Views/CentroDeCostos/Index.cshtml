
@{
    ViewBag.Title = "Centro de Costos";
}

<script src="~/js/Generals.js"></script>
<script src="~/Jquery Form Steps/js/sweetalert.min.js"></script>
<script src="~/js/CentroDeCostos.js"></script>


<style>
    #trsGen:hover {
        background: #FCFFC9;
    }
</style>

<div>
    <h5 style="display:none;" class="ml-2 mt-5" id="Titulo">Centro de Costos</h5>
</div>


<div id="container">

</div>





<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="ModalTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>


            <form method="post" id="form" class="border border-right-0 border-left-0 border-secondary rounded pb-5">

                <div class="modal-body">

                    <div class="form-row">
                        <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                            <label for="Descripcion">Descripción</label>
                            <input type="text" class="form-control" id="Descripcion" name="Descripcion" placeholder="Descripción" required maxlength="100" />
                        </div>
                    </div>


                    <div class="col-sm-12 text-center mt-3" id="DivIsActive">
                        <input hidden type="text" id="IsActive" name="IsActive" value="true" />
                        <label for="EstaActivo">
                            <input type="checkbox" id="EstaActivo" name="EstaActivo" />
                            <span>Activo</span>
                        </label>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="Id" name="Id" placeholder="Id" style="height:0 !important; visibility:hidden;" />
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="Accion" name="Accion" hidden value="" style="height:0 !important;" />
                    </div>


                </div>



                <div class="modal-footer">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center mt-5">
                        <button type="submit" class="btn btn-primary" id="BtnAdd" onclick="Add();">Guardar</button>
                        <button type="submit" class="btn btn-primary" id="BtnUpdate" onclick="Add();">Actualizar</button>
                        <button type="button" class="btn btn-secondary" id="BtnCancelar" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>


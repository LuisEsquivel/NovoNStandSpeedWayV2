</head>
<body>

    <nav class="navbar navbar-expand-md navbar-light fixed sticky-top" id="nav" style="    background: #000529; /* Old browsers */
    background-image: -moz-linear-gradient(left, #000529 1%, #002055 24%, #005db5 67%, #0074d9 100%); /* FF3.6-15 */
    background-image: -webkit-linear-gradient(left, #000529 1%,#002055 24%,#005db5 67%,#0074d9 100%); /* Chrome10-25,Safari5.1-6 */
    background-image: linear-gradient(to right, #000529 1%,#002055 24%,#005db5 67%,#0074d9 100%); opacity: 0.8;">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="/Home/Index"> <img src="~/img/NOVO_logosmall-1.png" class="img-fluid" /> </a>
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

                    @using NovoNStandSpeedWayV2.WEB.Helpers;
                    @{
                        var url = Url.Action();


                        if (url == "/Home/Index" || url == "/")
                        {
                            <li class="nav-item">
                                                    <a class="nav-link activar" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                        }


                        if (url == "/Activos/Index")
                        {
                            <li class="nav-item">
                                <a class="nav-link activar" asp-area="" asp-controller="Activos" asp-action="Index">Activos</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ">
                                <a class="nav-link text-white" asp-area="" asp-controller="Activos" asp-action="Index">Activos</a>
                            </li>
                        }




                        <li class="nav-item dropdown">

                            @if (url != "/Home/Index" &&
                           url != "/Activos/Index" &&
                           url != "/Registrarse/Index" &&
                           url != "/Login/Index" &&
                           url != "/Usuarios/MiPerfil" &&
                           url != "/"
                           )
                            {
                                <a class="nav-link dropdown-toggle activar" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Catálogos
                                </a>
                            }
                            else
                            {
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Catálogos
                                </a>
                            }


                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">



                                @{

                                    var g = new Generals();
                                    if (g.IsAdmin())
                                    {

                                        if (url == "/Roles/index")
                                        {
                                            <a class="nav-link activar" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                        }
                                        else
                                        {
                                            <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                        }


                                        if (url == "/Usuarios/Index")
                                        {
                                            <a class="nav-link activar" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                        }
                                        else
                                        {
                                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                        }

                                    }






                                    if (url == "/Lectores/Index")
                                    {
                                        <a class="nav-link activar" asp-area="" asp-controller="Lectores" asp-action="Index">Lectores</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" asp-area="" asp-controller="Lectores" asp-action="Index">Lectores</a>
                                    }


                                    if (url == "/FormaAdquisicion/Index")
                                    {
                                        <a class="nav-link activar" asp-area="" asp-controller="FormaAdquisicion" asp-action="Index">Forma Adquisición</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" asp-area="" asp-controller="FormaAdquisicion" asp-action="Index">Forma Adquisición</a>
                                    }



                                    if (url == "/CentroDeCostos/Index")
                                    {
                                        <a class="nav-link activar" asp-area="" asp-controller="CentroDeCostos" asp-action="Index">Centro de Costos</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" asp-area="" asp-controller="CentroDeCostos" asp-action="Index">Centro de Costos</a>
                                    }

                                    if (url == "/Roles/Index")
                                    {
                                        <a class="nav-link activar" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                    }


                                    if (url == "/Ubicaciones/Index")
                                    {
                                        <a class="nav-link activar" asp-area="" asp-controller="Ubicaciones" asp-action="Index">Ubicaciones</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" asp-area="" asp-controller="Ubicaciones" asp-action="Index">Ubicaciones</a>
                                    }
                                }


                            </div>
                        </li>


                        if (g.GetCookieValue(g.CockieName) != null)
                        {

                            if (url == "/Usuarios/MiPerfil")
                            {
                                <li>
                                    <a class="nav-link activar" asp-area="" asp-controller="Usuarios" asp-action="MiPerfil">Mi Perfil</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="MiPerfil">Mi Perfil</a>
                                </li>
                            }


                            <li>
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Logout">Salir</a>
                            </li>
                        }



                    }

                </ul>

            </div>
        </div>
    </nav>





    <main>
        @RenderBody()
    </main>




    <footer class="footer bg-secondary pt-5 mt-5" id="footer">

        <div class="text-center">
            <a href="/Home/Index"> <i class="fa fa-home fa-5x" style="color:lightseagreen"> </i></a>


            @{

                @*if (g.GetCookieValue(g.CockieName) == null)
